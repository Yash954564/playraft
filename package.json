{
  "name": "hybrid-pytest-framework",
  "version": "1.0.0",
  "description": "A hybrid Python-TypeScript test automation framework with AI capabilities",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:api": "npx playwright test tests/apitest",
    "test:ui": "npx playwright test tests/uitest",
    "test:bdd": "npx cucumber-js",
    "test:bdd:api": "npx cucumber-js --profile api",
    "test:bdd:ui": "npx cucumber-js --profile ui",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "build": "tsc",
    "clean": "rimraf dist reports/screenshots/* reports/videos/*",
    "preinstall": "npm install -g playwright",
    "postinstall": "playwright install",
    "generate:report": "node tools/generate-report.js",
    "start:python": "python run_simple_api_tests.py",
    "start:openai": "python run_openai_tests.py"
  },
  "keywords": [
    "typescript",
    "playwright",
    "python",
    "pytest",
    "automation",
    "testing",
    "cucumber",
    "bdd",
    "ai",
    "openai"
  ],
  "author": "Expert Software Developer",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "@playwright/test": "^1.34.0",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "allure-cucumberjs": "^2.0.0-beta.24",
    "allure-playwright": "^2.1.0",
    "axios": "^1.3.6",
    "chance": "^1.1.11",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^7.1.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cucumber": "^2.0.0",
    "eslint-plugin-playwright": "^0.12.0",
    "eslint-plugin-prettier": "^4.2.1",
    "expect": "^29.5.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.5.0",
    "jsonpath": "^1.1.1",
    "lodash": "^4.17.21",
    "openai": "^4.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "dependencies": {
    "@slack/web-api": "^6.8.1"
  }
}